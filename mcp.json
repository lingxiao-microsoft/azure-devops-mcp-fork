{
   "inputs": [
     {
         "id": "ado_org",
         "type": "promptString",
         "description": "Azure DevOps organization name  (e.g. 'contoso')"
     },
     {
         "id": "ado_pat",
         "type": "promptString",
         "description": "Azure DevOps Personal Access Token (required for authentication)",
         "default": ""
     }
   ],
   "servers": {
     "ado": {
         "type": "stdio",
         "command": "node",   
         "args": [
             "dist/index.js",
             "${input:ado_org}",
             "${input:ado_pat}"
         ],
         "env": {
             "AZURE_DEVOPS_PAT": "${env:AZURE_DEVOPS_PAT}"
         }
      }
   }
}